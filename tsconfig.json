{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./resources/react/*"
      ],
      "~/*": [
        "./public/*"
      ],
      "~bootstrap/*": [
        "./node_modules/bootstrap/scss/*"
      ]
    }
  },
  "include": [
    "resources/react/**/*",
    "resources/react/**/*.ts",
    "resources/react/**/*.tsx",
    "resources/react/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
